<div class="container p-4" style="margin-top:70px;">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">ACTUALIZAR ENTREGA</h3>
                </div>
                <div class="card-body">
                    <form action="/edit/{{payment.id}}" method="post">
                        <div class="input-group mt-2">
                            <label for="type-payment" class="input-group-text">Tipo de entrega</label>
                            <select class="form-control" name="paytype" id="paytype" required>
                                <option value="" disabled>Selecciona un tipo de entrega</option>
                                <option value="sin-delivery">Sin delivery</option>
                                <option value="delivery-rappi">Delivery-rappi</option>
                            </select>
                        </div>
                        <div class="input-group mt-2"></div>
                            <label for="type-payment" class="input-group-text">Tienda</label>
                            <select class="form-control" name="paytype" id="paytype" required>
                                <option value="" disabled>Selecciona una tienda</option>
                                <option value="1">TIENDA CENTRAL</option>
                                <option value="2">TIENDA SURCO</option>
                            </select>
                        </div>

                        <div class="input-group mt-2">
                            <label for="date" class="input-group-text">Fecha de entrega</label>
                            <input class="form-control" type="text" name="paydate" id="paydate" placeholder="Hora de entrega"
                                value="{{payment.paydate}}" required>
                        </div>

                        <div class="input-group mt-2"></div>
                            <label for="estado" class="input-group-text">Estado</label>
                            <select class="form-control" name="paytype" id="paytype" required>
                                <option value="" disabled>Selecciona el estado de la entrega</option>
                                <option value="1">CANCELADO</option>
                                <option value="1">COMPLETADO</option>
                            </select>
                        </div>
    
                        <div class="input-group mt-2">
                            <label for="hour" class="input-group-text">Hora de entrega</label>
                            <input class="form-control" type="text" name="payhour" id="payhour" placeholder="Hora de entrega"
                                value="{{payment.payhour}}" required>
                        </div>


                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success">
                                <a class="nav-link link-light" aria-current="page" href="/payments">Actualizar</a>
                            </button>
                            <button class="btn btn-danger">
                                <a class="nav-link link-light" aria-current="page" href="/payments">Cancelar</a>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
