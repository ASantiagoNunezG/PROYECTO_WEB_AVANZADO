<!--views/admin/types-deliveries/list.hbs-->
<div class="container mt-5 pt-5">
    <h1 class="text-center">Lista de Tipos de Entrega</h1>

    <div class="mb-3">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addDeliveryTypeModal">Agregar Tipo de Entrega</button>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tipo de entrega</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each tdeliveries}}
            <tr>
                <td>{{this.delivery_type_id}}</td>
                <td>{{this.name}}</td>
                <td>
                    <button class="btn btn-warning btn-sm" onclick="openEditModal(
                        {{this.delivery_type_id}},
                        '{{this.name}}'
                    )">
                        Editar
                    </button>
                    <button class="btn btn-danger btn-sm" onclick="deleteDeliveryType({{this.delivery_type_id}})">
                        Eliminar
                    </button>
                </td>
            </tr>
            {{else}}
                <tr>
                    <td colspan="9" class="text-center">No hay tipos de entregas registrados</td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<!--Modal para registrar un nuevo tipo de delivery-->
<div class="modal fade" id="addDeliveryTypeModal" tabindex="-1" aria-labelledby="addDeliveryTypeLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addDeliveryTypeLabel">
                    Agregar un nuevo tipo de Entrega
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addTDelivery">
                    <div class="mb-3">
                        <label for="name" class="form-label">Nombre del tipo de entrega</label>
                        <input type="text" class="form-control" id="name" name="name" required>
                    </div>
                    <button type="submit" class="btn btn-primary">
                        Agregar Tipo
                    </button>
                </form>
            </div>
        </div>
    </div>

</div>

<!--Modal para la ediciÃ³n de un registro del tipo de delivery-->
<div class="modal fade" id="editTDeliveryModal" tabindex="-1" aria-labelledby="editTDeliveryModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editTDeliveryModal">Editar Tipo de Entrega</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editTDeliveryForm">
                    <input type="hidden" id="editTDeliveryId" name="delivery_type_id">

                    <div class="mb-3">
                        <label class="form-label">Nombre del tipo de entrega</label>
                        <input type="text" class="form-control" id="editName" name="name">
                    </div>
                    <button type="submit" class="btn btn-primary">Actualizar</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="/js/delivery_type.js"></script>
