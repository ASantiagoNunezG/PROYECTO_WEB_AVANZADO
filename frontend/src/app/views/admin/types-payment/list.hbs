<div class="container mt-5 pt-5">
    <h1 class="text-center">Lista de tipos de pago</h1>

    <div class="mb-3">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addPaymentTypeModal">Agregar tipo de pago</button>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tipo de pago</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each payments}}
            <tr>
                <td>{{this.payment_type_id}}</td>
                <td>{{this.name}}</td>
                <td>
                    <button class="btn btn-warning btn-sm" onclick="openEditModal(
                        {{this.payment_type_id}},
                        '{{this.name}}'
                    )">
                        Editar
                    </button>
                    <button class="btn btn-danger btn-sm" onclick="deletePaymentType({{this.payment_type_id}})">
                        Eliminar
                    </button>
                </td>
            </tr>
            {{else}}
                <tr>
                    <td colspan="9" class="text-center">No hay tipos de entregas registrados</td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<!-- Modal para agregar venta -->
<div class="modal fade" id="addPaymentTypeModal" tabindex="-1" aria-labelledby="addPaymentTypeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addPaymentTypeModalLabel">Agregar tipo de pago</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addPaymentTypeForm">
                    <div class="mb-3">
                        <label for="name" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="name" name="name" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Agregar</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Modal para editar venta -->
<div class="modal fade" id="editPaymentTypeModal" tabindex="-1" aria-labelledby="editPaymentTypeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editPaymentTypeModalLabel">Editar Venta</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editPaymentTypeForm">
                    <input type="hidden" id="editPaymentTypeId" name="payment_type_id">
                    
                    <div class="mb-3">
                        <label class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="editName" name="idcli" required>
                    </div>

                    <button type="submit" class="btn btn-primary">Actualizar</button>
                </form>
            </div>

        </div>
    </div>
</div>


<script src="/js/payment_type.js"></script>
