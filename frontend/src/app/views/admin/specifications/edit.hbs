<div class="container p-4" style="margin-top:70px;">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">ACTUALIZAR ESPECIFICACIÓN</h3>
                </div>
                <div class="card-body">
                    <form action="/edit/{{payment.id}}" method="post">
                        <div class="input-group mt-2">
                            <label for="date" class="input-group-text">Nombre</label>
                            <input class="form-control" type="text" name="specname" id="specname" placeholder="Nombre"
                                value="{{specification.specname}}" required>
                        </div>

                        <div class="input-group mt-2">
                            <label for="hour" class="input-group-text">Descripción</label>
                            <input class="form-control" type="text" name="specdesc" id="specdesc" placeholder="Descripción"
                                value="{{specification.specdesc}}" required>
                        </div>


                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success">
                                <a class="nav-link link-light" aria-current="page" href="/payments">Actualizar</a>
                            </button>
                            <button class="btn btn-danger">
                                <a class="nav-link link-light" aria-current="page" href="/payments">Cancelar</a>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
