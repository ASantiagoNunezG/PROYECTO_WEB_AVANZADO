<div class="container p-4" style="margin-top:70px ;">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">Agregar pago</h3>
                </div>
                <div class="card-body">
                    <form action="/payments/add" method="post">
                        <div class="input-group mt-2">
                            <label for="type-payment" class="input-group-text">Tipo de pago</label>
                            <select class="form-control" name="paytype" id="paytype" required>
                                <option value="" disabled>Selecciona una categoría</option>
                                <option value="tarjeta-visa">Tarjeta de crédito o débito</option>
                                <option value="paypal">Paypal</option>
                                <option value="efectivo">Efectivo</option>
                            </select>
                        </div>

                        <div class="input-group mt-2">
                            <label for="date" class="input-group-text">Fecha de pago</label>
                            <input class="form-control" type="text" name="paydate" id="paydate" placeholder="Fecha de pago"
                                value="{{payment.paydate}}" required>
                        </div>


                        <div class="input-group mt-2">
                            <label for="hour" class="input-group-text">Hora de pago</label>
                            <input class="form-control" type="text" name="payhour" id="payhour" placeholder="Hora de pago"
                                value="{{payment.payhour}}" required>
                        </div>


                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success">
                                <a class="nav-link link-light" aria-current="page" href="/payments">Guardar</a>
                            </button>
                            <button class="btn btn-danger">
                                <a class="nav-link link-light" aria-current="page" href="/payments">Cancelar</a>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

