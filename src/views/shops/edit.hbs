<div class="container p-4" style="margin-top:70px;">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">ACTUALIZAR TIENDA</h3>
                </div>
                <div class="card-body">
                    <form action="/edit/{{payment.id}}" method="post">

                        <div class="input-group mt-2">
                            <label for="nombre" class="input-group-text">Nombre</label>
                            <input class="form-control" type="text" name="nombre" id="nombre" placeholder="Nombre de la tienda"
                                value="{{payment.paydate}}" required>
                        </div>


                        <div class="input-group mt-2">
                            <label for="direccion" class="input-group-text">Dirección</label>
                            <input class="form-control" type="text" name="direccion" id="direccion" placeholder="Dirección de la tienda"
                                value="{{payment.payhour}}" required>
                        </div>


                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success">
                                <a class="nav-link link-light" aria-current="page" href="/shops">Actualizar</a>
                            </button>
                            <button class="btn btn-danger">
                                <a class="nav-link link-light" aria-current="page" href="/shops">Cancelar</a>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
