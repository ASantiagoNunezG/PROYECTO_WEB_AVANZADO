<div class="container p-4" style="margin-top:70px ;">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">Agregar nuevo tipo de delivery</h3>
                </div>
                <div class="card-body">
                    <form action="/types-deliveries/add" method="post">

                        <div class="input-group mt-2">
                            <label for="date" class="input-group-text">Nombre</label>
                            <input class="form-control" type="text" name="paydate" id="paydate" placeholder="Nombre"
                                value="{{typepayment.typepname}}" required>
                        </div>

                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success">
                                <a class="nav-link link-light" aria-current="page" href="/types-deliveries">Guardar</a>
                            </button>
                            <button class="btn btn-danger">
                                <a class="nav-link link-light" aria-current="page" href="/types-deliveries">Cancelar</a>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

